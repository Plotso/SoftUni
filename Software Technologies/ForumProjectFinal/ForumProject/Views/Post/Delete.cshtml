@model ForumProject.Models.Post

@{
    ViewBag.Title = "Delete";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h2>Delete Post</h2>
            @using (Html.BeginForm("Delete", "Post", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                     @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(m => m.Topic, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.Topic, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })
                        <div class="col-sm-4">
                            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @readonly = "readonly", @rows = "7" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            @Html.ActionLink("Cancel", "Index", "Post", null, new { @class = "btn btn-default" })
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                    </div>
            }
    </div>
</body>
</html>
