<div class="row">
    <div class="col-md-4">
        <h2>Most recent posts</h2>
        <div>
            @foreach (var post in Model.RecentPosts)
            {
                <div class="recent-post-wrapper">
                    <div>
                        @Html.ActionLink(@post.Topic, "ViewPost", "Post", new { @id = post.PostId }, null)
                    </div>
                    <span class="recentPostAuthor">
                        by @post.Author.UserName on <span class="date">@post.DateCreated</span>
                    </span>
                </div>
                <hr />
            }
        </div>
        @*<p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">See recent &raquo;</a></p>*@
    </div>
    <div class="col-md-4">
        <h2>Last commented posts</h2>
        <div>
            @foreach (var post in Model.LastCommentedPosts)
            {
                <div class="recent-post-wrapper">

                    @Html.ActionLink(@post.Topic, "ViewPost", "Post", new { @id = post.PostId }, null)

                    <div>

                        

                        <div class="date">

                            <span class="recentPostAuthor">
                                by @post.Author.UserName on <span class="date">@post.DateCreated</span>
                            </span>

                        </div>

                    </div>

                    @*<p style="word-wrap: break-word" class="comment-content">
                        @post.Comments.First().GetShortContent()
                    </p>*@

                </div>
                                    <hr />
            }
        </div>
        @*<p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">See viewed &raquo;</a></p>*@
    </div>
    <div class="col-md-4">
